{
  "name": "viddist",
  "version": "1.0.0",
  "description": "A distributed alternative to YouTube and Popcorn Time",
  "main": "src/index.js",
  "scripts": {
    "build": "vue-cli-service build --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viddist/viddist.git"
  },
  "keywords": [
    "dat"
  ],
  "author": "Jacob Karlsson <jacob.karlsson95@gmail.com> (https://jacob-karlsson.com)",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/viddist/viddist/issues"
  },
  "homepage": "https://github.com/viddist/viddist#readme",
  "dependencies": {
    "choo": "^6.13.3",
    "eslint-plugin-vue": "^6.0.1",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-service": "^4.1.1",
    "browser-pack-flat": "^3.4.2",
    "browserify": "^16.5.0",
    "browserify-nodent": "^1.0.22",
    "choo-devtools": "^2.5.1",
    "common-shakeify": "^0.5.4",
    "css-extract": "^1.3.0",
    "eslint": "^6.7.2",
    "sheetify": "^7.4.0",
    "sheetify-cssnext": "^2.0.1",
    "standard": "^11.0.1",
    "uglifyify": "^5.0.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/essential"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-console": [
        "off"
      ],
      "no-shadow": [
        "error",
        {
          "builtinGlobals": true,
          "hoist": "functions",
          "allow": []
        }
      ]
    }
  }
}
