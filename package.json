{
  "name": "viddist",
  "version": "1.0.0",
  "description": "A distributed alternative to YouTube and Popcorn Time",
  "main": "src/app.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viddist/viddist.git"
  },
  "keywords": [
    "ipfs"
  ],
  "author": "Jacob Karlsson <jacob.karlsson95@gmail.com> (https://jacob-karlsson.com)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/viddist/viddist/issues"
  },
  "homepage": "https://github.com/viddist/viddist#readme",
  "dependencies": {
    "choo": "^6.12.1",
    "go-ipfs-dep": "0.4.15",
    "ipfsd-ctl": "^0.37.4"
  },
  "devDependencies": {
    "electron": "^2.0.2",
    "eslint": "^4.19.1",
    "standard": "^11.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-console": [
        "off"
      ],
      "no-shadow": [
        "error",
        {
          "builtinGlobals": true,
          "hoist": "functions",
          "allow": []
        }
      ]
    }
  }
}
